<body id="edits-page">
    <h1 id="edits-page-header">Changed Your Mind?</h1>

    <form id="update-events-form" method="POST"
        action="/trips/<%= trip._id %>/day/<%= itinerary._id %>/events/<%= eventid %>?_method=PUT">
        <label id="time-label">Time:</label>
        <input id="time" type="datetime-local" name="time">

        <label id="event-label">Activity:</label>
        <textarea id="event" name="activity"></textarea>
        <input id="submit-event" type="submit" value="Update Plan">
    </form>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>