<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&family=Knewave&family=Rubik+Maze&display=swap"
        rel="stylesheet">
    <title>Document</title>
</head>

<body id="show-trip-page">

    <h1 class="trip-name"><%= trip.destination %> <%= trip.year %></h1>

    <p class="lead">
        Trip Overview
    </p>

    <section id="individual-days">

        <% if (trip.itinerary.length) { %>
            <% trip.itinerary.forEach(itinerary=> { %>

                <div id="day-cards" class="card text-center">
                    <div class="card-header">
                        <%= trip.destination %>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">Day <%= itinerary.day %></h5>
                        <p class="card-text">View your plans for day <%= itinerary.day %> in <%= trip.destination %>!</p>
                        <a href="/trips/<%= trip._id %>/day/<%= itinerary._id%>" class="btn btn-primary">View</a>
                    </div>

                    <div class="card-footer text-muted">
                    
                    </div>
                </div>







            <% }) %>

                <div class="itinerary-nav">
                    <div class="itinerary-back">
                        <a href="/trips"> 
                            <button type="button" class="btn btn-outline-primary">Back to Trips</button>
                        </a>
                    </div>

                    <div class="itinerary-new">
                        <a href="/trips/<%= trip._id %>/itineraries/new">
                            <button type="button" class="btn btn-primary">Add Itinerary</button>
                        </a>
                    </div>
                </div>

        <% } else { %>

                <blockquote id="no-itineraries" class="blockquote">
                    <p>No Itineraries Yet! Would you like to add one?</p>
                </blockquote>

                <div class="no-itinerary-nav">
                    <div class="no-itinerary-back">
                        <a href="/trips"> 
                            <button type="button" class="btn btn-outline-primary">Back to Trips</button>
                        </a>
                    </div>
                    
                    <div class="no-itinerary-new"> 
                        <a href="/trips/<%= trip._id %>/itineraries/new">
                            <button type="button" class="btn btn-primary">Add Itinerary</button>
                            </a>
                        </div>
                    </div>

        <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</body>

</html>